<div class="d-flex justify-content-center ">
   <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
      <div>
        <h2 class="text-align-center"><%= t("edit.title") %></h2>
        <div class="text-align-center">
          <%= image_tag current_user.image, class:"avatar-large" %>
          <p> <%= current_user.first_name %> </p>
        </div>
        <div class="edit-form-liine">
          <div class="marge-edit">
            <p class="text-align-center"><%= t("edit.personal_infos") %></p>
            <%= f.input :address, class: "liine-form" %>
            <%= f.input :telephone %>
            <%= f.input :whatsapp_number %>
          </div>
          <div class="marge-edit">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <p class="text-align-center"><%= t("edit.password") %></p>
            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "new-password" }, class: "liine-form" %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.input :photo, input_html: { class: 'hidden cache-photo' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo'  %>
          <% if current_user.document.file.nil? %>
            <%= f.input :document, input_html: { class: 'hidden cache-photo' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload an I.D' %>
          <% end %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Update", class:"btn-flat" %>
        </div>
        <div class="text-center mt-2">
          <%= link_to "Back", :back %>
        </div>
        <div class="text-center mt-1 mb-3 ">
          <%= link_to "Cancel my account", registration_path(resource_name), class:"btn btn-danger",data: { confirm: "Are you sure?" }, method: :delete %>
        </div>
        </div>
      </div>
    <% end %>
</div>
