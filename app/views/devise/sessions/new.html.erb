<div class="text-center">
    <div class="d-flex justify-content-center">
      <div>
        <div class="text-center icon-size">
          <%= link_to user_facebook_omniauth_authorize_path do %>
            <i style="color:  #3b5998;" class="fab fa-facebook"></i>
            <p><%= t("navbar.signf") %></p>
          <% end %>
        </div>
        <div class="text-center icon-size">
          <%= link_to user_google_oauth2_omniauth_authorize_path do%>
            <i style="color: #DB4437" class="fab fa-google"></i>
            <p><%= t("navbar.signg") %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center btn-primary rounded">
              <%= f.button :submit, "Log in", { class:"text-white" } %>
            </div>
      <% end %>
    </div>
</div>
<div class="d-flex align-items-center flex-column">
  <%= render "devise/shared/links" %>
</div>
