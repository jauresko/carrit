<div class="navbar navbar-dark bg-dark navbar-expand-sm navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%=image_tag('Line.png')%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.photo.file %>
        <li class="nav-item active ml-2 mb-2">
          <%= link_to t("home.home"), root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active ml-2 mb-2 d-flex align-items-center">
          <div class="dropdown">
            <button class="dropdown-toggle nounderline text-white" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Messages
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% if user_signed_in? %>
                <% current_user.bookings.each do |booking| %>
                  <%= link_to "#{booking.travel.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.travels.each do |travel| %>
                  <% travel.bookings.each do |booking| %>
                    <%= link_to "#{booking.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                  <% end %>
                <% end %>
                <% end %>
              </div>
          </div>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to t("navbar.travel"), new_travel_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.image, class: "avatar dropdown-toggle ml-2 mb-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to t("navbar.profil"), profil_path, class: "dropdown-item" %>
            <%= link_to t("navbar.travels"), mytravel_path, class: "dropdown-item" %>
            <%= link_to t("navbar.bookings"), mybooking_path, class: "dropdown-item" %>
            <%= link_to t("navbar.log_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif user_signed_in? && current_user.photo.file == nil  %>
        <li class="nav-item active ml-2 mb-2">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item active ml-2 mb-2 d-flex align-items-center">
          <div class="nav-item dropdown">
            <a class="dropdown-toggle nounderline text-white" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Messages
            </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% if user_signed_in? %>
                <% current_user.bookings.each do |booking| %>
                  <%= link_to "#{booking.travel.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.travels.each do |travel| %>
                  <% travel.bookings.each do |booking| %>
                    <%= link_to "#{booking.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                  <% end %>
                <% end %>
                <% end %>
              </div>
          </div>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to t("navbar.travel"), new_travel_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.image, class: "avatar dropdown-toggle ml-2 mb-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to t("navbar.profil"), profil_path, class: "dropdown-item" %>
            <%= link_to t("navbar.travels"), mytravel_path, class: "dropdown-item" %>
            <%= link_to t("navbar.bookings"), mybooking_path, class: "dropdown-item" %>
            <%= link_to t("navbar.log_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item ml-2 mb-2 text-center">
          <%= link_to t("navbar.travel"), new_travel_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item">
          <%= link_to t("navabar.sign_up"),  root_path, :id => 'login', "data-toggle" => "modal", 'data-target' => '#sign_up', class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("navabar.login"),  root_path, :id => 'login', "data-toggle" => "modal", 'data-target' => '#sign_up', class:"nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="sign_up" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-line">
        <div class="text-center">
          <%= link_to user_facebook_omniauth_authorize_path do %>
            <i style="color:  #3b5998;" class="fab fa-facebook"></i>
            <p><%= t("navbar.signf") %></p>
          <% end %>
        </div>
        <div class="text-center">
          <%= link_to user_google_oauth2_omniauth_authorize_path do%>
            <i style="color: #DB4437" class="fab fa-google"></i>
            <p><%= t("navbar.signg") %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
