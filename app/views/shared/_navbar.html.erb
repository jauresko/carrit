<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%=image_tag('Line.png')%>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.photo.file %>
        <li class="nav-item active ml-2 mb-2">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item active ml-2 mb-2 d-flex align-items-center">
          <div class="dropdown">
            <button class="dropdown-toggle border border-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Messages
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% if user_signed_in? %>
                <% current_user.bookings.each do |booking| %>
                  <%= link_to "#{booking.travel.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.orders.each do |order| %>
                  <%= link_to "#{order.travel.user.first_name}", travel_order_chat_room_path(order.travel, order, order.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.travels.each do |travel| %>
                  <% travel.bookings.each do |booking| %>
                    <%= link_to "#{booking.user.first_name}", travel_order_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                  <% end %>
                <% end %>
                <% end %>
              </div>
          </div>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to 'Oder with us', new_purchase_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to 'Monetize your travel', new_travel_path, class: "nav-link btn-flat-2 text-white col-xs-6" %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif user_signed_in? && current_user.photo.file == nil  %>
        <li class="nav-item active ml-2 mb-2">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item active ml-2 mb-2 d-flex align-items-center">
          <div class="dropdown">
            <button class="dropdown-toggle border border-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Messages
            </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% if user_signed_in? %>
                <% current_user.bookings.each do |booking| %>
                  <%= link_to "#{booking.travel.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.orders.each do |order| %>
                  <%= link_to "#{order.purchase.user.first_name}", purchase_order_chat_room_path(order.purchase, order, order.chat_room), class:"dropdown-item" %>
                <% end %>
                <% current_user.travels.each do |travel| %>
                  <% travel.bookings.each do |booking| %>
                    <%= link_to "#{booking.user.first_name}", travel_booking_chat_room_path(booking.travel, booking, booking.chat_room), class:"dropdown-item" %>
                  <% end %>
                <% end %>
                <% end %>
              </div>
          </div>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to 'Oder with us', new_purchase_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item active ml-2 mb-2 text-center">
          <%= link_to 'Monetize your travel', new_travel_path, class: "nav-link btn-flat-2 text-white col-xs-6" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag 'user.png', class: "avatar dropdown-toggle ml-2 mb-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My purchases", mypurchase_path, class: "dropdown-item" %>
            <%= link_to "My travels", mytravel_path, class: "dropdown-item" %>
            <%= link_to "My orders", myorder_path, class: "dropdown-item" %>
            <%= link_to "My bookings", mybooking_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item ml-2 mb-2 text-center">
          <%= link_to 'Oder with us', new_purchase_path, class: "nav-link btn-flat text-white col-xs-6" %>
        </li>
        <li class="nav-item ml-2 mb-2 text-center">
          <%= link_to 'Monetize your travel', new_travel_path, class: "nav-link  btn-flat-2 text-white col-xs-6" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
