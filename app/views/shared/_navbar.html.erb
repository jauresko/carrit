<nav>
  <div>
    <%= image_tag('Line.png', class:'logo') %>
  </div>
  <% if user_signed_in? && current_user.photo.file %>
    <ul class="nav-link">
      <li><%= link_to t("home.home"), root_path %></li>
      <li><%= link_to t("navbar.travel"), new_travel_path, class:"btn-flat" %></li>
      <li><%= link_to t("navbar.profil"), profil_path %></li>
      <li><%= link_to t("navbar.travels"), mytravel_path %></li>
      <li><%= link_to t("navbar.bookings"), mybooking_path %></li>
      <li><%= link_to t("navbar.log_out"), destroy_user_session_path, method: :delete %></li></li>
      <li><%= image_tag current_user.image, height:100, width: 100, class:"avatar-large" %></li>
    </ul>
  <% elsif user_signed_in? && current_user.photo.file == nil %>
    <ul class="nav-link">
      <li><%= link_to t("home.home"), root_path %></li>
      <li><%= link_to t("navbar.travel"), new_travel_path, class: "btn-flat" %></li>
      <li><%= link_to t("navbar.profil"), profil_path %></li>
      <li><%= link_to t("navbar.travels"), mytravel_path %></li>
      <li><%= link_to t("navbar.bookings"), mybooking_path %></li>
      <li><%= link_to t("navbar.log_out"), destroy_user_session_path, method: :delete %></li>
    </ul>
    <div>
      <%= image_tag current_user.image, class:"avatar-large ml-5" %>
    </div>
  <% else %>
    <ul class='nav-link'>
      <li> <%= link_to t("navbar.travel"), new_travel_path , class: "btn-flat" %></li>
      <li><i class="fas fa-users"></i> <%= link_to t("navabar.sign_up"),  root_path, :id => 'login', "data-toggle" => "modal", 'data-target' => '#sign_up'%></li>
      <li><i class="fas fa-user"></i> <%= link_to t("navabar.login"),  root_path, :id => 'login', "data-toggle" => "modal", 'data-target' => '#sign_up' %></li>
    </ul>
  <% end %>
  <div class="burger">
    <div class="line1"></div>
    <div class="line2"></div>
    <div class="line3"></div>
  </div>
</nav>
<!-- Modal -->
<div class="modal fade" id="sign_up" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-line">
        <div class="text-center">
          <%= link_to user_facebook_omniauth_authorize_path do %>
            <i style="color:  #3b5998;" class="fab fa-facebook"></i>
            <p><%= t("navbar.signf") %></p>
          <% end %>
        </div>
        <div class="text-center">
          <%= link_to user_google_oauth2_omniauth_authorize_path do%>
            <i style="color: #DB4437" class="fab fa-google"></i>
            <p><%= t("navbar.signg") %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
