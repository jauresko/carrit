<h1 class="text-center mt-1">Travel with us</h1>
<div class="d-flex justify-content-center ">
    <%= simple_form_for [@travel] do |f| %>
    <hr>
      <div>
        <div class="form-group align-content-center pagination-center" style = "text-align: center">
          <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepickr"}, label: t("travels.new.departure")%>
          <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepickr"}, label: t("travels.new.arrival")%>
          <%= f.input :departure_place, label: t("travels.new.d_place") %>
          <%= f.input :arrival_place, label: t("travels.new.a_place") %>
          <%= f.input :arrival_hour, label: t("travels.new.a_hour") %>
          <%= f.input :weight_left, label: t("travels.new.weight_left") %>
          <%= f.input :price, label: t("travels.new.price") %>
          <%= f.input :details, label: t("travels.new.details") %>
          <%= f.button :submit, "submit", class: "btn-flat" %>
        </div>
      </div>
    <% end %>
</div>
