<h1 class="text-center mt-1">Edit your travel</h1>
<div class="d-flex justify-content-center ">
    <%= simple_form_for [@travel] do |f| %>
    <hr>
      <div>
        <div class="form-group align-content-center pagination-center" style = "text-align: center">
          <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepickr"}%>
          <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepickr"}%>
          <%= f.input :departure_place %>
          <%= f.input :arrival_place %>
          <%= f.input :arrival_hour %>
          <%= f.input :pick_up_place %>
          <%= f.input :weight_left %>
          <%= f.input :price %>
          <%= f.input :details %>
          <%= f.button :submit, "submit", class: "btn-flat" %>
        </div>
      </div>
    <% end %>
</div>
