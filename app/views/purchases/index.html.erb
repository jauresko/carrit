<div class = "mt-5 mb-5" style="text-align: center">
  <h2>Find a liner</h2>
</div>
<div class="d-flex flex-column align-items-center">
  <%= form_tag purchases_path, class:"text-align-center pagination-center",method: :get do %>
  <%= text_field_tag :from,
    params[:from],
    class: " form-control form-search col-xl-12 col-lg-12 col-md-12 col-sm-12 form-index mb-3",required: false,
    placeholder: "From"
  %>
  <%= text_field_tag :to,
    params[:to],
    class: "form-control form-search col-xl-12 col-lg-12 col-md-12 col-sm-12 form-index mb-3",required: false,
    placeholder: "To"
  %>
  <%= submit_tag "Search", class: "btn-flat" %>
<% end %>
</div>
<hr>

<div class="d-flex flex-column align-items-center" >
  <% @purchases.each do |purchase| %>
  <a href=<%= "purchases/#{purchase.id}" %> class = "col-xl-6 col-lg-6 col-md-12 col-sm-12 ">
    <div class="card-product mb-5 col-12">
      <%= cl_image_tag purchase.user.photo, class: "avatar" %>
      <div class="card-product-infos">
        <h2><%= purchase.name %></h2>
    <p><%= purchase.price %></p>
    <p><%= purchase.purchase_place %></p>
      </div>
    </div>
  </a>
  <% end %>
</div>
