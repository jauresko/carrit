<div class = "mt-5 mb-5" style="text-align: center">
  <h2><%= t("purchases.index.order") %></h2>
</div>
<div class="d-flex flex-column align-items-center mb-5">
  <%= form_tag purchases_path, class:"text-align-center pagination-center",method: :get do %>
  <%= text_field_tag :from,
    params[:from],
    class: " form-control form-search col-xl-12 col-lg-12 col-md-8 col-sm-8 form-index mb-3",required: false,
    placeholder: t("purchases.index.departure")
  %>
  <%= text_field_tag :to,
    params[:to],
    class: "form-control form-search col-xl-12 col-lg-12 col-md-12 col-sm-12 form-index mb-3",required: false,
    placeholder: t("purchases.index.arrival")
  %>
  <%= submit_tag t("purchases.index.search"), class: "btn-flat-2" %>
<% end %>
</div>
</div>
<% if @purchases.nil? %>
<% else %>
  <% @purchases.each do |purchase| %>
  <% if purchase.user == current_user %>
  <% else %>
  <% if purchase.photo.file.nil? %>
  <div class="blog-card">
      <div class="meta">
        <%= image_tag "no-photo", height: 300, width: 300, crop: :fill, class:"photo"%>
      </div>
  <% else %>
  <div class="blog-card">
      <div class="meta">
        <%= cl_image_tag purchase.photo, height: 300, width: 300, crop: :fill, class:"photo"%>
      </div>
  <% end %>
      <div class="description">
        <h2><strong><%= purchase.name %></strong></h2>
        <h2><strong><%= purchase.seller %></strong></h2>
        <p> Buy at <strong><%= purchase.purchase_place %></strong> </p>
        <p>Url: <strong><%= purchase.product_url %></strong></p>
        <p class="read-more">
          <a href=<%= "purchases/#{purchase.id}" %>>Read More</a>
        </p>
      </div>
    </div>
    </div>
  <% end %>
  <% end %>
<% end %>

