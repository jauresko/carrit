<h1 class="text-center">Make an order with us</h1>
<div class="d-flex justify-content-center ">
    <%= simple_form_for [@purchase] do |f| %>
    <hr>
      <div>
        <div class="form-group align-content-center pagination-center" style = "text-align: center">
          <%= f.input :product_url%>
          <%= f.input :name%>
          <%= f.input :seller %>
          <%= f.input :purchase_place %>
          <%= f.input :delivery_place %>
          <%= f.input :price %>
          <%= f.input :bonus_traveler %>
          <%= f.input :photo, input_html: { class: 'hidden' }, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
          <%= f.button :submit, "Order", class: "btn-flat" %>
        </div>
      </div>
    <% end %>
