<h2 class="text-center">My purchase request</h2>
<hr>
<% @purchases.each do |purchase| %>
<div class="notification mt-5 mb-5">
  <%= cl_image_tag purchase.photo, height: 100, width: 100, crop: :fill, class:"photo" %>
  <div class="notification-content">
    <p><%= purchase.name %></p>
    <p><%= purchase.seller %></p>
    <p><%= purchase.price %></p>
    <p>To deliver to <strong><%= purchase.delivery_place %></strong> from <strong><%= purchase.purchase_place %></strong> with <strong><%= purchase.bonus_traveler %>â‚¬ of traveler bonus</strong>.</p>
  </div>

  <div class="notification-actions d-flex flex-column">
    <% if purchase.order.status != "Cancelled" %>
      <%= link_to purchase_path(purchase, class:"mb-2",purchase: { status: "Delivered"}), method: :patch, data: { confirm: "Are you sure?" } do %>Deliver
        <i class="fas fa-check"></i>
      <% end %>
    <% end %>
    <a class="mb-2" href=<%= "/purchases/#{purchase.id}/edit" %>>Edit <i class="fas fa-pencil-alt"></i></a>
    <%= link_to purchase_path(purchase), method: :delete do%>Delete
    <i class="far fa-trash-alt"></i></a>
    <% end %>
  </div>
</div>
<% end %>
