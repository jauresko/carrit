
<h2 class="text-center mt-1">Book this travel</h2>
<div class="d-flex justify-content-center ">
    <%= simple_form_for [@travel ,@booking] do |f| %>
    <hr>
      <div>
        <div class="form-group align-content-center pagination-center" style = "text-align: center">
          <%= f.input :weight %>
          <%= f.input :description %>
          <%= f.input :recipient, label: 'Recipient contact'%>
          <%= f.button :submit, "submit", class: "btn-flat" %>
        </div>
      </div>
    <% end %>
</div>
